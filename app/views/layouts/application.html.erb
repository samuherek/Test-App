<!DOCTYPE html>
<html>
<head>
  <title>Newapp</title>

  <!-- Bootstrap stylesheet -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <!-- Custom stylesheet -->
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

  <!-- JS libraries -->
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <!-- Bootstrap JS -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

  <!-- Meta tags -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-default navbar-inverse navbar-static-top">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Bali Store", root_path, class: "navbar-brand" %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->

      <%= form_tag("/products", method: "get", class: "nvabar-form navbar-left", role: "search") do %>
        <div class="form-group">
          <%= text_field_tag(:q) %>
          <%= submit_tag "Search", class: "btn btn-default" %>
        </div>
      <% end %>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav pull-right registration-btns">
          <li>
            <% if user_signed_in? %>
              <%= link_to("Logout", destroy_user_session_path, :method => :delete, class: "btn btn-registration") %>
            <% else %>
              <%= link_to("Login", new_user_session_path, class: "btn btn-registration") %>
            <% end %>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Products", products_path %></li>
          <li><%= link_to "About Us", static_pages_about_path %></li>
          <li><%= link_to "Contact", static_pages_contact_path %></li>
          <li><%= link_to "Orders", orders_path %></li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <% if notice %>
    <p class="alert alert-info col-xs-12 col-md-6 col-md-offset-4" role="alert"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-info col-xs-12 col-md-6 col-md-offset-4" role="alert"><%= alert %></p>
  <% end %>

  <div class="container-fluid page-wrap">
    <%= yield %>
  </div>

  <footer class="footer">
    <div class="container-fluid">
      <p>Copyright stuff goes here</p>
    </div>
  </footer>

</body>
</html>

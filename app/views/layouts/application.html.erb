<!DOCTYPE html>
<html>
<head>
  <title>Newapp</title>

  <!-- Bootstrap stylesheet -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <!-- Custom stylesheet -->
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

  <!-- JS libraries -->
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <!-- Bootstrap JS -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

  <!-- Meta tags -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
</head>
<body>

<div class="hero">
  <nav class="top-bar">
    <div class="container-fluid">
      <div class="pull-left nav-logo">
        <%= link_to (root_path) do %>
          <%= image_tag("logo.svg", class: "navbar-logo-small navbar-logo") %>
        <% end %>
        <!-- <span class="logo-title">Oky Shirt</span> -->
      </div>
      <div class="pull-right registration-btns">
          <% if user_signed_in? %>
            <%= link_to("Logout", destroy_user_session_path, :method => :delete, class: "btn-registration") %>
          <% else %>
            <%= link_to("Login", new_user_session_path, class: "button btn-registration btn-login") %>
            <%= link_to("Sign Up", new_user_registration_path, class: " button btn-registration btn-sign-up") %>
          <% end %>
      </div>
    </div>
  </nav>
  <div class="hero-title-bg col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
    <h1 class="hero-title">Shirts for everyone</h1>
  </div>
  <div class="hero-button col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
    <%= link_to("Start Browsing", products_path, class: "button btn-start-browsing") %>
  </div>
</div>

  <% if notice %>
    <p class="alert alert-info col-xs-12 col-md-6 col-md-offset-4" role="alert"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-info col-xs-12 col-md-6 col-md-offset-4" role="alert"><%= alert %></p>
  <% end %>

  <div class="container-fluid page-wrap">
    <%= yield %>
  </div>

  <footer class="footer">
    <div class="container-fluid">
      <p>Copyright stuff goes here</p>
    </div>
  </footer>

</body>
</html>

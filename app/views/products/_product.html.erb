<li class="product-box col-xs-6 col-sm-4 col-md-3 product">
  <div class="product-wrapper">

    <span class="text-muted product-color"><span class="hide"><%= product.color %></span></span>

    <div class="product-links">
      <%= link_to 'Show', product, class: "btn btn-default" %>
      <%= link_to 'Edit', edit_product_path(product), class: "btn btn-warning" %>
      <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
    </div>

    <div class="product-image">
        <img src="<%= product.image_url %>" alt="<% product.name %>" class="product-image"/>
        <div class="product-image-overlay">
          <%= link_to 'Show Details', product, class: "button btn-details" %>
        </div>
    </div>
    <div class="product-details">
      <div class="box-title">
        <div class="title-product">
          <%= link_to product.name, product, class: "product-title" %>
          <div class="star-rating">
            <span>4.5</span>
          </div>
        </div>
        <span class="product-price pull-right">
          <span class="">$<%= product.price %></span>
        </span>
      </div>
      <div class="product-options">
        <div class="product-cart">
          <a href="#" class="button add-to-cart-btn">Add to cart</a>
        </div>
        <div class="whishlist">
          <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
        </div>
      </div>
    </div>
  </div>
</li>

<p id="notice"><%= notice %></p>
<div class="product-top">
  <h3 class="col-xs-12 col-sm-6">Your Products</h3>
  <%= link_to 'New Product', new_product_path, class: "btn btn-default pull-right" %>
</div>

<div class="container-fluid product-list">
  <div class="row">
    <% @products.each do |product| %>
    <div class="col-xs-12 col-sm-6 col-md-4 product">
      <div class="product-links">
        <%= link_to 'Show', product, class: "btn btn-default" %>
        <%= link_to 'Edit', edit_product_path(product), class: "btn btn-warning" %>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
      </div>
      <img src="<%= product.image_url %>" alt="<% product.name %>" />
      <h3 class="product-title"><%= product.name %></h3>
      <p class="product-description"><%= product.description %></p>
      <div class="product-color-price">
        <span class="text-muted product-color"><strong>Color:</strong> <%= product.color %></span>
        <span class="product-price">$<%= product.price %></span>
      </div>
    </div>
    <% end %>
  </div><!-- End of row -->
</div><!-- End of fluid container -->

<h1>Contact Us</h1>

<%= flash[:notice] %>

<%= form_tag("/static_pages/thank_you", class: "col-xs-12 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4 well") do %>
<div class="row">
    <div class="col-xs-12">
        <div class="form-group">
            <%= label_tag :name, "Name" %>
            <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
        </div>
        <div class="form-group">
            <%= label_tag :email, "Email Address" %>
            <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
        </div>
        <div class="form-group">
            <%= label_tag :message, "Message" %>
            <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message" %>
        </div>
    </div>
</div>
<%= submit_tag "Send", class: "btn btn-success col-xs-12" %>
<% end %>
